@page "/"
@using StudentRecordsApp.Services
@inject StudentXmlService StudentService

<PageTitle>Home</PageTitle>

<h1>Welcome to Student Records App</h1>

<div class="card mt-4" style="max-width: 300px;">
    <div class="card-body text-center">
        <h5 class="card-title">Total Students</h5>
        <p class="display-4">@totalStudents</p>
    </div>
</div>

@code {
    private int totalStudents;

    protected override void OnInitialized()
    {
        totalStudents = StudentService.GetAll().Count;
    }
}
